.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #e8dec0
  position relative

  &__container
    position relative
    z-index 1
    padding 10px 0 30px 0
    text-align: center
    letter-spacing: -0.5px
    +above($breakpoints.sm)
      text-align: start
      padding 15px 0 70px 0
    +above($breakpoints.md)
      padding 20px 0 110px 0
    +above($breakpoints.xxl)
      padding 22px 0 191px 0

  &__icon-crown
    position: absolute
    z-index -1
    width: 100px;
    height: auto;
    top: 57px;
    left: -36px;
    +above($breakpoints.sm)
      width: 200px;
      top: 80px;
      left: -83px;
    +above($breakpoints.md)
      width: 250px;
      top: 90px;
      left: -105px;
    +above($breakpoints.xxl)
      width 354px
      top: 108px
      left: -148px

  &__title
    position relative
    z-index 1
    padding 20px 0 10px 0
    +above($breakpoints.sm)
      padding 40px 0 15px 0
    +above($breakpoints.md)
      padding 60px 0 18px 0
    +above($breakpoints.xxl)
      padding 85px 0 22px 0
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color #292323
      border-radius: 6px
      width: 228px;
      height: 20px;
      top: 21px;
      left: 40px;
      +above($breakpoints.sm)
        width: 399px;
        height: 36px;
        top: 41px;
        left: -7px;
      +above($breakpoints.md)
        width: 536px;
        height: 47px;
        top: 62px;
        left: -9px;
      +above($breakpoints.xxl)
        width: 722px;
        height: 60px;
        top: 89px;
        left: -11px;

  &__sub-title
    position relative
    z-index 1
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color $color-green
      border-radius: 6px
      width: 122px;
      height: 16px;
      top: 15px;
      left: 125px;
      +above($breakpoints.sm)
        width: 130px;
        height: 21px;
        top: -2px;
        left: 296px;
      +above($breakpoints.md)
        width: 169px;
        height: 24px;
        top: -2px;
        left: 386px;
      +above($breakpoints.xxl)
        width: 214px;
        height: 33px;
        top: -2px;
        left: 476px;

  &__text
    padding 15px 0 10px 0
    +above($breakpoints.sm)
      padding 30px 0 15px 0
    +above($breakpoints.md)
      padding 40px 0 20px 0
    +above($breakpoints.xxl)
      padding: 57px 0 26px 0;

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      width 535px
      flex-direction: row
      flex-wrap: wrap
      gap: 6px
    +above($breakpoints.md)
      gap: 8px
    +above($breakpoints.xxl)
      gap: 10px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 180px !important
      +above($breakpoints.md)
        width 220px !important
      +above($breakpoints.xxl)
        width 260px !important

  &__agree-wrapper
    color: #6F6F6F
    +above($breakpoints.sm)
      padding-left 10px
    +above($breakpoints.md)
      padding-left 20px
    +above($breakpoints.xxl)
      padding-left 30px

  &__img
    width 280px
    height: auto
    margin: 15px 0 0 50px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 453px;
      bottom: 56px;
      right: -138px;
    +above($breakpoints.md)
      width: 621px;
      bottom: 62px;
      right: -182px;
    +above($breakpoints.xxl)
      width 811px
      bottom: 111px
      right: -275px

  &__icon-wave
    position: absolute
    width 100%
    height: auto
    bottom: -1px
    +above($breakpoints.xxxxxxl)
      display: none
