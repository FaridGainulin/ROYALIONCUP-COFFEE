.invest-section
  // background-image: url('../images/invest-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #FDF9E6

  &__container
    position relative
    z-index 1
    text-align: center
    padding 20px 0 1px 0
    +above($breakpoints.sm)
      padding 40px 0
    +above($breakpoints.md)
      padding 70px 0
    +above($breakpoints.xxl)
      padding 114px 0

  &__icon-1
    position: absolute
    z-index -1
    width: 60px;
    height: auto;
    bottom: 12px;
    left: -18px;
    +above($breakpoints.sm)
      width: 38px;
      bottom: 56px;
      left: -63px;
    +above($breakpoints.md)
      width: 50px;
      bottom: 82px;
      left: -97px;
    +above($breakpoints.xxl)
      width 64px
      bottom: 144px
      left: -140px

  &__icon-2
    position: absolute
    z-index -1
    width: 30px;
    height: auto;
    top: 88px;
    right: -25px;
    +above($breakpoints.sm)
      width: 38px;
      top: 110px;
      right: -60px;
    +above($breakpoints.md)
      width: 50px;
      top: 176px;
      right: -85px;
    +above($breakpoints.xxl)
      width 64px
      top: 249px
      right: -125px

  &__sub-title
    padding 10px 0 15px
    +above($breakpoints.sm)
      padding 15px 0 40px
    +above($breakpoints.md)
      padding 18px 0 60px
    +above($breakpoints.xxl)
      padding 19px 0 80px

  &__cards
    +above($breakpoints.sm)
      display: flex
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    width 280px !important
    height: 220px
    border-radius: 10px
    display: flex
    flex-direction: column
    justify-content center
    align-items: center
    gap: 10px
    background-color #90BE45
    +above($breakpoints.sm)
      gap: 10px
      border-radius: 15px
      width 235px !important
      height: 205px
    +above($breakpoints.md)
      gap: 12px
      border-radius: 20px
      width 308px !important
      height: 275px
    +above($breakpoints.xxl)
      gap: 16px
      width 380px !important
      height: 347px
    &--yellow
      background-color #F2CA30
    &--green
      background-color #457345

  &__card-title
    font-size: 22px !important
    line-height: 120%
    +above($breakpoints.sm)
      font-size: 22px !important
    +above($breakpoints.md)
      font-size: 24px !important
    +above($breakpoints.xxl)
      font-size: 30px !important

  &__card-icon
    width 90px
    height: 90px
    +above($breakpoints.sm)
      width 80px
      height: 80px
    +above($breakpoints.md)
      width 120px
      height: 120px
    +above($breakpoints.xxl)
      width 160px
      height: 160px

  &__btn
    width 250px !important
    +above($breakpoints.sm)
      width 200px !important
    +above($breakpoints.md)
      width 220px !important
    +above($breakpoints.xxl)
      width 240px !important
