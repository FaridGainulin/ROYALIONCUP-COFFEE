.city-section
  background-image: url('../images/city-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #e8dec0
  position relative

  &__container
    position relative
    z-index 1
    text-align: center
    padding 20px 0 10px
    letter-spacing: -0.5px
    +above($breakpoints.sm)
      text-align: start
      padding 50px 0
    +above($breakpoints.md)
      padding 90px 0
    +above($breakpoints.xxl)
      padding 153px 0 160px

  &__icon
    position: absolute
    z-index -1
    width: 75px;
    height: auto;
    top: 13px;
    left: 15px;
    +above($breakpoints.sm)
      width: 130px;
      top: 20px;
      left: -63px;
    +above($breakpoints.md)
      width: 222px;
      top: 37px;
      left: -108px;
    +above($breakpoints.xxl)
      width: 354px;
      top: 60px;
      left: -184px;

  &__title
    position relative
    z-index 1
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color #292323
      border-radius: 6px
      width: 193px;
      height: 21px;
      top: 20px;
      left: 58px;
      +above($breakpoints.sm)
        width: 341px;
        height: 35px;
        top: 36px;
        left: -7px;
      +above($breakpoints.md)
        width: 457px;
        height: 47px;
        top: 48px;
        left: -9px;
      +above($breakpoints.xxl)
        width: 618px;
        height: 60px;
        top: 66px;
        left: -11px;

  &__sub-title
    padding 15px 0 10px
    +above($breakpoints.sm)
      padding 25px 0 20px
    +above($breakpoints.md)
      padding 30px 0 25px
    +above($breakpoints.xxl)
      padding 38px 0 31px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      width 551px
      flex-direction: row
      flex-wrap: wrap
      gap: 6px
    +above($breakpoints.md)
      gap: 8px
    +above($breakpoints.xxl)
      gap: 10px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 180px !important
      +above($breakpoints.md)
        width 220px !important
      +above($breakpoints.xxl)
        width 270px !important

  &__img
    width 280px
    height: auto
    margin: 0px 0 0 32px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 370px;
      bottom: 14px;
      right: -50px;
    +above($breakpoints.md)
      width: 500px;
      bottom: 20px;
      right: -72px;
    +above($breakpoints.xxl)
      width 650px
      bottom: 53px
      right: -96px

  &__icon-wave
    position: absolute
    width 100%
    height: auto
    top: -2px
    transform: rotateX(180deg);
    +above($breakpoints.xxxxxxl)
      display: none
