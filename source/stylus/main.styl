@font-face
  font-family 'RFDEWIEXTENDED-BOLD'
  src url('../fonts/RFDEWIEXTENDED-BOLD.woff'), url('../fonts/RFDEWIEXTENDED-BOLD.woff2')
  font-display swap
@font-face
  font-family 'RFDEWIEXTENDED-LIGHT'
  src url('../fonts/RFDEWIEXTENDED-LIGHT.woff'), url('../fonts/RFDEWIEXTENDED-LIGHT.woff2')
  font-display swap
@font-face
  font-family 'RFDEWIEXTENDED-REGULAR'
  src url('../fonts/RFDEWIEXTENDED-REGULAR.woff'), url('../fonts/RFDEWIEXTENDED-REGULAR.woff2')
  font-display swap
@font-face
  font-family 'RFDEWIEXTENDED-SEMIBOLD'
  src url('../fonts/RFDEWIEXTENDED-SEMIBOLD.woff'), url('../fonts/RFDEWIEXTENDED-SEMIBOLD.woff2')
  font-display swap
@font-face
  font-family 'RFDEWIEXTENDED-ULTRABOLD'
  src url('../fonts/RFDEWIEXTENDED-ULTRABOLD.woff'), url('../fonts/RFDEWIEXTENDED-ULTRABOLD.woff2')
  font-display swap


@import 'common/variables'
@import 'common/*'
@import 'components/*'

body
  margin 0 auto
  font-size 18px
  font-family 'RFDEWIEXTENDED-REGULAR'
  font-weight 400
  line-height 120%
  color $color-brown

.layout
  width 100%
  height 100%
  margin 0 auto
  display flex
  flex-direction column
  overflow-x hidden
.main
  flex 1

.wrapper
  max-width 320px
  margin 0 auto
  padding 0 6px
  width 100%
  +above($breakpoints.sm)
    max-width 750px
    padding 0 12px
  +above($breakpoints.md)
    max-width 996px
    padding 0 15px
  +above($breakpoints.xxl)
    padding 0 20px
    max-width 1220px
